alias ..='cd ..'
alias ...='cd ../..'

alias ls='lsd -F --hyperlink=auto --group-directories-first'
alias l='lsd -F --hyperlink=auto --group-directories-first -l'
alias ll='lsd -F --hyperlink=auto --group-directories-first -l'
alias la='lsd -F --hyperlink=auto --group-directories-first -la'

alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias rg='rg --hyperlink-format=kitty'

alias ip='ip -color=auto'

alias xclip='xclip -selection c'

alias dua='dua --format binary'

alias docker-ps='docker ps --format "{{.Names}} {{.Status}}"'
alias docker-psa='docker ps -a --format "{{.Names}} {{.Status}}"'
alias docker-ps-stopped='docker ps -f "status=exited"'
alias docker-dangling-images='docker images -f dangling=true'
alias docker-unused-images='docker images --format {{.Repository}}:{{.Tag}} | grep -v "$(docker ps --format {{.Image}})"'
