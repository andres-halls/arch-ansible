# {{ ansible_managed }}

server {
    listen 80;
    listen [::]:80;
    {% if gitlab.registry_host.split('.') | count == 2 %}
    server_name {{ gitlab.registry_host }} www.{{ gitlab.registry_host }};
    {% else %}
    server_name {{ gitlab.registry_host }};
    {% endif %}
    include snippets/letsencrypt.conf;

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    {% if gitlab.registry_host.split('.') | count == 2 %}
    server_name {{ gitlab.registry_host }} www.{{ gitlab.registry_host }};
    {% else %}
    server_name {{ gitlab.registry_host }};
    {% endif %}
    include conf.d/ssl-params.conf;
    #include snippets/ssl-{{ gitlab.registry_host }}.conf;

    access_log {{ gitlab.logs_dir }}/{{ gitlab.registry_host }}_access.log;
    error_log  {{ gitlab.logs_dir }}/{{ gitlab.registry_host }}_error.log;

    location / {
        {% if gitlab.registry_port.split(':') | count == 2 %}
        proxy_pass http://127.0.0.1:{{ gitlab.registry_port.split(':')[1] }};
        {% else %}
        proxy_pass http://127.0.0.1:{{ gitlab.registry_port }};
        {% endif %}
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Port 443;
        proxy_set_header X-Forwarded-Ssl on;
    }
}
