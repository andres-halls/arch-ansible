# {{ ansible_managed }}

server {
    listen 80;
    listen [::]:80;
    {% if organizr.host_name.split('.') | count == 2 %}
    server_name {{ organizr.host_name }} www.{{ organizr.host_name }};
    {% else %}
    server_name {{ organizr.host_name }};
    {% endif %}
    include snippets/letsencrypt.conf;

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    {% if organizr.host_name.split('.') | count == 2 %}
    server_name {{ organizr.host_name }} www.{{ organizr.host_name }};
    {% else %}
    server_name {{ organizr.host_name }};
    {% endif %}
    include conf.d/ssl-params.conf;
    include snippets/ssl-{{ organizr.host_name }}.conf;

    access_log {{ organizr.logs_dir }}/access.log;
    error_log  {{ organizr.logs_dir }}/error.log;

    location / {
        proxy_pass http://127.0.0.1:{{ organizr.port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}