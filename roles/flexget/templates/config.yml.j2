web_server: yes

templates:
  tv-series:
    series:
      agroup:
        - Altered Carbon
        - Better Call Saul
        - Black Mirror
        - Chernobyl
        - Fear The Walking Dead
        - Final Space
        - Game of Thrones
        - Humans
        - Jessica Jones
        - Marvels Daredevil
        - Marvels Runaways
        - Marvels The Punisher
        - Mr Robot
        - My Little Pony Friendship is Magic
        - Once Upon a Time
        - Philip K Dicks Electric Dreams
        - Rick and Morty
        - Star Trek Discovery
        - Stranger Things
        - The Act
        - The Good Place
        - The Walking Dead
        - Watchmen
        - Westworld

tasks:
  update_series:
    rss: {{ flexget.rss_url }}
    all_series: yes
    transmission:
      host: 172.17.0.1
      port: 9091
      path: /downloads/tv_shows/{{ '{{' }}series_name{{ '}}' }}/Season {{ '{{' }}series_season{{ '}}' }}
      add_paused: no
      {% if transmission.web_user != '' %}
      username: {{ transmission.web_user }}
      password: {{ transmission.web_passwd }}
      {% endif %}

schedules:
  - tasks: update_series
    schedule:
      hour: 4-17/1
